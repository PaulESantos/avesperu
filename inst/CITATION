citHeader("To cite avesperu in publications use:")

bibentry(
  bibtype   = "Manual",
  title    = "avesperu: Access to the List of Birds Species of Peru",
  author   = "Paul E. Santos - Andrade",
  year     = 2025,
  note     = "R package version 0.0.6",
  textVersion = paste(
"Santos - Andrade, PE. (2025). avesperu: Access to the List of Birds Species of Peru. R package version 0.0.6"
  ),
  footer = "To cite the avesperu dataset, please use: \nPlenge, M. A. Version [23/06/2025] List of the birds of Peru / Lista de las aves del Perú. Unión de Ornitólogos del Perú: https://sites.google.com/site/boletinunop/checklist"
)
